{
  "protocol": "https://schema.org",
  "published": true,
  "types": {
    "chat": {
      "schema": "https://schema.org/schemas/chat",
      "dataFormats": ["application/json"]
    },
    "message": {
      "schema": "https://schema.org/schemas/message",
      "dataFormats": ["application/json"]
    },
    "lastMsg": {
      "schema": "https://schema.org/schemas/lastMsg",
      "dataFormats": ["application/json"]
    },
    "profile": {
      "schema": "https://schema.org/schemas/profile",
      "dataFormats": ["application/json"]
    },
    "attachment": {
      "schema": "https://schema.org/schemas/attachment",
      "dataFormats": [
        "image/gif",
        "image/png",
        "image/jpeg",
        "image/webp",
        "video/mp4",
        "audio/webm",
        "audio/mp4",
        "application/json",
        "text/plain"
      ]
    }
  },
  "structure": {
    "chat": {
      "$actions": [
        {
          "who": "anyone",
          "can": ["create", "update"]
        },
        {
          "who": "author",
          "of": "chat",
          "can": ["read"]
        },
        {
          "who": "recipient",
          "of": "chat",
          "can": ["read"]
        }
      ],
      "message": {
        "$actions": [
          {
            "who": "anyone",
            "can": ["create", "update"]
          },
          {
            "who": "author",
            "of": "chat/message",
            "can": ["read"]
          },
          {
            "who": "recipient",
            "of": "chat/message",
            "can": ["read"]
          }
        ]
      },
      "lastMsg": {
        "$actions": [
          {
            "who": "anyone",
            "can": ["create", "update"]
          },
          {
            "who": "author",
            "of": "chat/lastMsg",
            "can": ["read"]
          },
          {
            "who": "recipient",
            "of": "chat/lastMsg",
            "can": ["read", "co-update"]
          }
        ]
      },
      "attachment": {
        "$actions": [
          {
            "who": "anyone",
            "can": ["create", "update"]
          },
          {
            "who": "author",
            "of": "chat/attachment",
            "can": ["read"]
          },
          {
            "who": "recipient",
            "of": "chat/attachment",
            "can": ["read"]
          }
        ]
      }
    },
    "profile": {
      "$actions": [{ "who": "anyone", "can": ["create", "read"] }]
    }
  }
}
